{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": false,
    "outDir": "./dist",
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "migration.ts",
    "populate.ts",
    "codegen.ts",
    "migrations/*.ts",
    "**/*.spec.ts",
    "src/plugins/**/ui/*",
    "src/ui-extensions/*"
  ]
}
